        <div class="login form">
            <p class="maintext"> User Signup</p>
            <%- include('../partials/flash') %>
                <form action="/user/signup" method="post" class="mt-3">
                    <input type="text" placeholder="First Name" id="Firstname" name="Firstname" required>
                    <input type="text" placeholder="Last Name" id="Lastname" name="Lastname" required>
                    <input type="email" placeholder="Email" id="email" name="email" required>
                    <div class="password-container">
                        <input type="password" placeholder="Create a password" id="password" name="password" required>
                        <button type="button" id="togglePassword" class="toggle-password-button">
