                        </button>
                    </div>
                    <div class="password-container">
                        <input type="password" placeholder="Confirm your password" onchange="check()" id="passwordretype"
                            name="passwordretype" required>
                            <button type="button" id="togglePassword1" class="toggle-password-button">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                            <input style="width: 23rem;" id="phone" type="tel" name="phone" />

                            <!-- <form id="login" onsubmit="process(event)">
                            
                        </form> -->


                  

                    <input type="submit" class="button" value="Signup">
                </form>
        </div>
    </div>
